<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="303" id="de.christian_steinert.tibetandict" version="0.0.23" versionCode="303" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>TibetanDictionary</name>
    <description>A Tibetan Dictionary app that supports Wylie input, uses Tibetan script and comes with various dictionaries.</description>
    <author email="dictionary@christian-steinert.de" href="http://www.christian-steinert.de">Christian Steinert</author>
    <content src="index.html" />
    <access origin="*" />
    <plugin name="cordova-android-support-gradle-release" spec="^2.0.1">
        <variable name="ANDROID_SUPPORT_VERSION" value="16.+" />
    </plugin>
    <plugin name="share-text-plugin" spec="plugins/share-text-plugin" />
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="35" />
    <framework src="androidx.core:core:1.12.0" />


    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="resources/android/splash/logo512_vectorized.xml" />
        
    <config-file target="AndroidManifest.xml" parent="/*">
        <supports-screens android:anyDensity="true" android:largeScreens="true" android:normalScreens="true" android:resizeable="true" android:smallScreens="true" android:xlargeScreens="true" /> 
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
     </config-file>

    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
        <!-- android application icon-->
        <application android:icon="@mipmap/icon" /> 
    </edit-config>

    <!-- Share text intent filter -->
    <config-file target="AndroidManifest.xml" parent="/manifest/application/activity[@android:name='MainActivity']">
        <intent-filter>
            <action android:name="android.intent.action.SEND" />
            <category android:name="android.intent.category.DEFAULT" />
            <data android:mimeType="text/*" />
        </intent-filter>
    </config-file>

</widget>
