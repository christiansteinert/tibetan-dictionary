<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="303" id="de.christian_steinert.tibetandict" version="0.0.23" versionCode="303" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>TibetanDictionary</name>
    <description>A Tibetan Dictionary app that supports Wylie input, uses Tibetan script and comes with various dictionaries.</description>
    <author email="dictionary@christian-steinert.de" href="http://www.christian-steinert.de">Christian Steinert</author>
    <content src="index.html" />
    <access origin="*" />
    <plugin name="cordova-android-support-gradle-release" spec="^2.0.1">
        <variable name="ANDROID_SUPPORT_VERSION" value="16.+" />
    </plugin>
    <plugin name="share-text-plugin" spec="plugins/share-text-plugin" />
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="35" />
    <framework src="androidx.core:core:1.12.0" />


    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="resources/android/splash/logo512_vectorized.xml" />
        
    <config-file target="AndroidManifest.xml" parent="/*">
        <supports-screens android:anyDensity="true" android:largeScreens="true" android:normalScreens="true" android:resizeable="true" android:smallScreens="true" android:xlargeScreens="true" /> 
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
     </config-file>

    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:icon="@mipmap/icon" android:enableOnBackInvokedCallback="true" /> 
    </edit-config>

    <config-file target="AndroidManifest.xml" parent="/manifest/application">
        <activity-alias android:name=".ShareTibetanActivity"
                        android:targetActivity=".MainActivity"
                        android:exported="true"
                        android:label="Tib -&gt; Eng">
            <intent-filter android:label="Tib -&gt; Eng">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="de.christian_steinert.tibetandict.CATEGORY_SHARE_LANG_TIB" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <meta-data android:name="searchLanguage" android:value="tib" />
        </activity-alias>
        <activity-alias android:name=".ShareEnglishActivity"
                        android:targetActivity=".MainActivity"
                        android:exported="true"
                        android:label="Eng -&gt; Tib">
            <intent-filter android:label="Eng -&gt; Tib">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="de.christian_steinert.tibetandict.CATEGORY_SHARE_LANG_EN" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <meta-data android:name="searchLanguage" android:value="en" />
        </activity-alias>
    </config-file>

</widget>
